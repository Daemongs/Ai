package ch04.sec01;

public class While문 {

	public static void main(String[] args) {
		//반복문
		//형식 While(조건) {참이면 수행할 문장}
		//1~100 출력하기
		//숫자변수 만들어 1출력하기 > 변수 +1 > 출력
		// 1 2 3
		
	int number=1;
	System.out.println(number);
	
	while (number <100) { //while 문의 조건
		number++;
		System.out.println(number);
	}
	
	System.out.println("--------------");
	// 10 20 30 40 .. 100
	
	int number2=10;
	System.out.println(number2);
	
	while (number2 <100) {
		number2 = number2+10;
		System.out.println(number2);
	}
		
	//100 90 80 70 ... - 10 - 20 출력하기

	System.out.println("--------------");
	
	int number3=100;
	while (number3 > -30 ) {
		System.out.println(number3);
		number3 -= 10;
	
	}
	System.out.println("--------------");
	
	// 1~20까지 출력해주기
	
	int number4=1;
	System.out.println(number4);
	while (number4>20);
	
	
	}
}
	
	
	
	
