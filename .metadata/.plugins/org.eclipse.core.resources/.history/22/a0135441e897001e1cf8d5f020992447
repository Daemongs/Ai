package ch06.sec06;

import java.util.Scanner;

//Account 콟이쫔 쎂쟕
public class BankApplication {

	Scanner sc = new Scanner(System.in);
	
	Account[] accounts = new Account[100];
	// int[] intArr = new int[100];
	
	int count = 0; //썯촥 쨬 캶羚
	public void createAccount() {
	      accounts[ count ] = new Account();
	      System.out.println("---------");
	      System.out.println(" 썯촥 쨬");
	      System.out.println("---------");
	      System.out.print("썯촥좾탺 :");
	      accounts[count].썯촥좾탺 = sc.next();
	      System.out.print("썯촥촸 :");
	      accounts[count].썯촥촸 = sc.next();
	      System.out.print("퉘舅쐏쮕 :");
	      accounts[count].퉘舅쐏쮕 = sc.nextInt();
	      System.out.println("써쎀 : 썯촥쌰 쨬왆쮴챲핎. ");
	      count = count + 1;

	}

    public void accountList() {
        System.out.println("------");
        System.out.println("썯촥점");
        System.out.println("------");
        for (int i = 0; i < count; i++) {
            System.out.println(accounts[i].getAccountNumber() + " " + accounts[i].getAccountHolder() + " "
                    + accounts[i].getBalance());
        }
    }

