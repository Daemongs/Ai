package ch03.sec02;

public class 대입연산자 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int count=100;
		count += 10;  // count = count+10
		
		//수식을 대입연산자로 고쳐보세요
		count = count*5;
		count *= 5;
		
		count = count /10;
		count /= 10;
		
		count = count %5;
		count %= 5;
		
		boolean b1 = true;
		
		b1 = b1&false;
		b1 &= false;
		
		b1 = b1 | true;
		b1 |= true;
		
		//삼항연산자 = 조건연산자
		// 형식 조건식? 참이면 : 거짓이면
		
		int score = 85;
		//90점 이상이면 장학생 아니면 비장학생이라고 출력하기
		
		String result = (score >=90) ?"장학생":"비장학생";
		
		System.out.println(score+ "점으로" + result+"입니다");
		
		//평균이 85.8보다 크고 합계가 1400이상이면 "통과" 아니면 "실패"라고 출력해주기
		
		double avg = 90.34;
		int sum = 2000;
		System.out.println((avg>85.4 && sum >= 1400) ?"통과" :"실패");
			
		
		
	}

}
