package ch03.sec02;

import java.util.Scanner;

public class 산술연산자 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in); //키보드로 글자 입력하는 클래스

		
		   try {
	            // 정수 입력
			   	System.out.print("13: ");
	            int kor = sc.nextInt();
	            System.out.println("입력한 정수: " + kor);

	            // 실수 입력
	            System.out.print("23: ");
	            double rate = sc.nextDouble();
	            System.out.println("입력한 실수: " + rate);

	            // 부울 값 입력
	            System.out.print("부울 값을 입력하세요 (true 또는 false): ");
	            boolean ox = sc.nextBoolean();
	            System.out.println("입력한 부울 값: " + ox);

	        } catch (Exception e) {
	            // 입력 예외 처리
	            System.out.println("입력 오류가 발생했습니다. 올바른 형식으로 입력하세요.");
	        } finally {
	            // Scanner 자원 해제
	            sc.close();
	        }
	    }
	}