package ch04.sec02;

public class While문연습 {

	public static void main(String[] args) {
		// 2 4 6 8 10 출력해보기
		// 2를 정수형 변수에 넣기
		// 정수형 변수를 2씩 더한다
		// 반복해서 출력한다
		// 10이 넘으면 종료한다
		
		int number = 2;
		while (number <= 10) {
			System.out.println(number + " "); //2
			number = number+2;
		}
			
		System.out.println("------------이하공백-------------");

	}


	 

        int i = 1;
        while ( i == 1 ) {
            System.out.println("나갈수 있을까?");
        }
        System.out.println("문장은 실행될수 있을까?");
    }
}
