package ch05.sec01;

import java.util.Scanner;

public class 참조타입 {

	public static void main(String[] args) {

		int n=10; //스택공간
		
		new Scanner(System.in);// new 명령어는 힙메모리에 Scanner클래스를 올려달라는 뜻
	
		// 힙메모리에 주소를 스택공간의 변수에 저장해야한다.
		
		System.out.println(n);
		
		//변수형식 자료형 변수명;
		Student st = new Student();
		/*코드작성 - 설계도
		 --> 사용하려면 메모리에 올려놓고 (new) 자료 사용하기 (시멘트 철근)
		 힙메모리에 올라감
		 --> 힙메모리에 올라가면 주소가 생긴다.
		 --> 스택공간에다 참조변수(주소가 들어있는 변수)를 선언하고 넣어 주어야 한다. */
		
	}

}
