package ch05.sec03;

public class 이차원배열 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int[][] intArr1 = { {1,2},{2,3},{3,4}}; //0행,1행,2행,
		String[][] strArr1 = {{"a","b","c"},{"d","e","f"}};
		boolean[][] bArr1 = { {false,true},{false,true},{false,true},{false,true}};
		
		//2차원 배열의 값을 출력하기
		System.out.println(intArr1[2][1]);
		System.out.println(strArr1[1][1]); //e출력
		System.out.println(bArr1[3][0]);
		
		//배열안에 모든 값 출력하기 0 0  0 1  1 0  1 1  2 0  2 1
		for(int i=0; i<intArr1.length ; i++  ) {   // i = 0,1,2
			for ( int j=0; j<intArr1[i].length ; j++ ) { // j = 0,1
				System.out.println(intArr1[i][j]);
			}
		}
	}

}
