package ch06.sec06;

import java.util.Scanner;

public class 확인문제20 {

	public static void main(String[] args) {
		BankApplication ba = new BankApplication();
		
		Scanner sc = new Scanner(System.in);
		String menu = "0";
		
		while(!menu.equals("5")) {
			System.out.println("-----------------------------------------");
			System.out.println("1. 계좌생성 2. 예금목록 3. 예금 4. 출금 5. 종료");
			System.out.println("-----------------------------------------");
			System.out.print("선택 >");

			menu = sc.nextLine();
			
			switch( menu ) {
			case "1": ba.createAccount(); break;
			case "2": ba.accountList(); break;
			case "3": ba.예금(); break;
			case "4": ba.출금(); break;
			case "5": System.out.println("프로그램 종료");break;
			}
			
			
			
		}
	
	
	
	
	
	}

}
