package ch04.sec01;

import java.util.Scanner;

public class Switch문 {

	public static void main(String[] args) {
		//영어 단어 공부 프로그램
		// 'A'라고 입력하면 Apple이라고 출력
		// 'B'라고 입력하면 Bear라고 출력
		// 'C'라고 입력하면 Cat이라고 출력
		
		//키보드입력하기
		Scanner sc = new Scanner(System.in);
		System.out.print("영어 첫글자 입력하기 (A~D)");
		String word = sc.next();
		System.out.println(word);
		
		//조건문
		if (word.equals("A")) {
			System.out.println("Apple");
		}else if (word.equals("B")) {
			System.out.println("Bear");
		}else if (word.equals("C")) {
			System.out.println("Cat");
		}else if (word.equals("D")) {
			System.out.println("Dododo");
		}else {
			System.out.println("입력하신 글자는 A,B,C,D가 아닙니당");
		}

		//switch문
		switch (word){
		case "A" : System.out.println("Autumn"); break;
		case "B" : System.out.println("Bluemoon"); break;
		case "C" : System.out.println("CloneX"); break;
		default : System.out.println("입력하신 글자는 A,B,C가 아니라고");
		}
		
	}

}
