package ch04.sec02;

public class 확인문제4장 {

	public static void main(String[] args) {
		// 3번문제
		// for문 1~100까지 나오게 하기
		int sum3 = 0;// 3의 배수의 합을 넣을 변수
		for (int i=1; i<=100; i++) {
			if (i % 3 ==0) {
				sum3= sum3+i;
			}
		}
		
		System.out.println("1~100까지의 3의 배수의 합은" + sum3 + " 입니다");
		System.out.println("----------------다음문제------------------");
		
		// 5번문제
		
		
	}
	

}
