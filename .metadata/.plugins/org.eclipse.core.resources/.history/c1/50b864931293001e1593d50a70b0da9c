package ch03.sec02;

import java.util.Scanner;

public class 산술연산자 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in); // 키보드로 글자 입력하는 클래스

        // 정수 입력
        System.out.print("정수를 입력하세요: ");
        int kor = sc.nextInt();
        System.out.println("입력한 정수: " + kor);

        // 실수 입력
        System.out.print("실수를 입력하세요: ");
        double rate = sc.nextDouble();
        System.out.println("입력한 실수: " + rate);

        // 부울 값 입력
        System.out.print("부울 값을 입력하세요 (true 또는 false): ");
        boolean ox = sc.nextBoolean();
        System.out.println("입력한 부울 값: " + ox);

        // Scanner 자원 해제
        sc.close();
    }
}
}
