package ch05.sec03;

import java.util.Scanner;

public class 학생점수분석 {

	public static void main(String[] args) {
		// 키보드 학생 수 입력, 학생들 점수 입력 받기
		
		Scanner sc = new Scanner(System.in);
				
		int menu = 1; //선택 변수
		
		while (menu !=5) {
			System.out.println("-----------------------------------------------------");
			System.out.println("1.학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분 석 | 5. 종 료");
			System.out.println("-----------------------------------------------------");
			System.out.println("선택>");
			menu = sc.nextInt();
		}

	}

}
