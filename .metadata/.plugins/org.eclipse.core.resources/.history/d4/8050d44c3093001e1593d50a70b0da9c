package ch03.sec02;

public class 확인문제3장 {

	public static void main(String[] args) {
		// 교재 107page
		
		int x=10;
		int y=20;
		int z= (++x) + (y--);
		System.out.println(z);
			

		int score = 85;
		String result = (!(score<90))? "가":"나";
		System.out.println(result);
		
		
		int pencils = 534;
		int students = 30;
		
		//학생 한명이 가지는 연필 수
		int pencilsPerStudent = pencils/students ;
		System.out.println(pencilsPerStudent);
		
		
		//남은 연필 수
		int pencilsLeft = pencils % students;
		System.out.println(pencilsLeft);
		
		//3번문제
		int value = 356;
		
//		double r1 = value/100.0;
//		System.out.println(r1);
//		
//		int r2 = (int) r1;
//		System.out.println(r2);
//		
//		int r3 = r2*100;
//		System.out.println(r3);
//		
		System.out.println( (int)(value/100.0)*100);

		int lenthTop = 5;
		int lengthBottom = 10;
		int height = 7;
		double area =(double) ((lenthTop +lengthBottom)*height/ 2);
		System.out.println(area);
		
		//변수선언할 때 첫글자는 영문자소문자, 
		//변수를 선언할 때 의미있는 글자로
		
		//6.
		int x1 = 10;
		int y1 = 5;
		
		System.out.println( (x1<7) && (y1<=5) );
		System.out.println( (x1%3 == 2) || (y1%2 !=1) );
		
		
		//7
		// Nan not a Number 숫자가 아니다, 문자 논리
		
		double x2 = 5.0;
		double y2 = 0.0;
		double z2 = 5% y2;
		
		System.out.println(z2);

		
		
		
		
	}

}
