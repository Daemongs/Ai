	 	int[] 인도금 = {15000000, 5000000};
	 	int[] 할부원금 = {20000000, 19000000};
	 	int[] 상환기관 = {36,24};
	 	int[] 월납입금 = {555555,791666};
	 	
		for(int i=0; i<차량명.length;i++) {
	 		System.out.println(name3[i]+" " +price3[i]);
	 		
		//대출 상황
	 		
	 	String[]성명 = {"이민주","남지철","김춘복","민애라"};
	 	int[]대출금액 = {27000000, 15000000, 15000000, 12000000};
	 	int[]기간 = {48, 60, 60, 60};
	 	
 		System.out.println("성명     대출종류     대출금액     기간(월)     월상환액");
	 	for(int i1=0; i1<성명.length ; i1++) {	 	
