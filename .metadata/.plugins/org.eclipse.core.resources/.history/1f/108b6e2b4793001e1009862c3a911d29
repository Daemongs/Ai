package ch04.sec01;

public class While문 {

	public static void main(String[] args) {
		//반복문
		//형식 While(조건) {참이면 수행할 문장}
		//1~100 출력하기
		//숫자변수 만들어 1출력하기 > 변수 +1 > 출력
		// 1 2 3
		
	int number=1;
	System.out.println(number);
	
	while (number <100) { //while 문의 조건
		number++;
		System.out.println(number);
	}
	
	System.out.println("--------------");
	// 10 20 30 40 .. 100
	
	int number2=10;
	System.out.println(number2);
	
	while (number2 <100) {
		number2 = number2+10;
		System.out.println(number2);
	}
		
	//100 90 80 70 ... - 10 - 20 출력하기

	System.out.println("--------------");
	
	int number3=100;
	while (number3 > -30 ) {
		System.out.println(number3);
		number3 -= 10;
	
	}
	System.out.println("--------------");
	
	// 1~20까지 출력해주기
	
	int number4=1;
	while (number4<=20) {
		number4++;
		if(number4 %5 ==0 ) {System.out.println(number4);}
		//continue는 반복문을 계속해라, 단 아래 문장은 건너뛰어라
		else {continue;}
		
	
	}
	System.out.println("--------------");
	// 1~100까지 합계, 답은 5050이다
	int number5 = 1;
	int sum=0;
	while (number5 <= 100) {
		sum += number5; // sum = sum+number5;
		System.out.println(number5 + "  " + sum );
		number5++;
	}
		System.out.println("--------------");
	
		// 1~100까지 중에서 합계가 3000이 넘으면 멈추고 숫자와 합계를 찍으세요. (77)
		int number6 = 1;
		int sum6=0;
		while (number6 <= 100) {
			sum6 += number6; 
			if (sum6 >= 3000) break;
			number6++;
		}
		
		System.out.println(number6 + "  " + sum6 );
	
	
}
}

	
	
	
