package ch04.sec02;

public class While문연습 {

	public static void main(String[] args) {
		// 2 4 6 8 10 출력해보기
		// 2를 정수형 변수에 넣기
		// 정수형 변수를 2씩 더한다
		// 반복해서 출력한다
		// 10이 넘으면 종료한다
		
		int number = 2;
		while (number <= 10) {
			System.out.println(number + " "); //2
			number = number+2;
		}
			
		System.out.println("------------이하공백-------------");

		// do~while 문
		/* {
			// 반복할 내용
			 }while(조건식);
		 */
		
		
		// 1 2 3 4 ... 10까지 나오게
		int n2=1;
		do {
			System.out.println(n2);
			n2++;
		}while(n2<=10);
		
		
		
		
		
		
		
		
		
	}

}
