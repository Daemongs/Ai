		BankApplication ba = new BankApplication();
		
		Scanner sc = new Scanner(System.in);
		String menu = "0";
		
		while(!menu.equals("5") {
			System.out.println("-----------------------------------------");
			System.out.println("1. 계좌생성 2. 예금목록 3. 예금 4. 출금 5. 종료");
			System.out.println("-----------------------------------------");
			System.out.print("선택 >");

			menu = sc.nextLine();
		}
	
	
	
	
	
	}

}
